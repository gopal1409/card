##vm versus process
  53  docker run --name mongo -d mongo
   54  docker ps
   55  ps aux
   56  kill -9 24059
   57  docker ps
   58  docker ps -a
   59  docker images
   60  docker rmi mongo
#####login inside a container
  63  docker run -d -p 3306:3306 --name db -e MYSQL_RANDOM_ROOT_PASSWORD=true mysql
   64  docker ps
   65  docker logs db
   67  docker exec -it db /bin/bash
   mysql -u root -p
show databases;
exit
